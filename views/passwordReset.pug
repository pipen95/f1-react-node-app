extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? It happens to the best of us! 
  p Please click on the button below to reset your password. 
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}?token=${token}`, target='_blank') Reset your password
  p If you didn't forget your password, please ignore this email!
